<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:table="sap.ui.table" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:valuehelp="sap.ui.comp.valuehelpdialog" xmlns:fb="sap.ui.comp.filterbar">
	<Dialog contentHeight="80%" contentWidth="60%" draggable="true" showHeader="false">
		<Page title="Depo">
			<Panel expanded="true">
				<table:Table id="idAvailableQuantityTable" rows="{booking>/availableQuantity}" selectionMode="Multi"
					 rowSelectionChange="onPressConfirmSelectAvailableQuan" visibleRowCountMode="Fixed" visibleRowCount="10">
					<table:columns>
						<table:Column>
							<Label text="Depo"/>
							<table:template>
								<Text text="{booking>DepoCode}" wrapping="true"/>
							</table:template>
						</table:Column>
							<table:Column>
							<Label text="Available Quantity"/>
							<table:template>
								<Text text="{booking>AvailableQuan}" wrapping="true"/>
							</table:template>
						</table:Column>
							<table:Column>
							<Label text="Requested Quantity" />
							<table:template>
								<Input value="{booking>RequestedQuan}" type="Number"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</Panel>
			<footer>
				<Toolbar>
					<ToolbarSpacer/>
					<Button press="onPressConfirmSelectDepo" text="OK"></Button>
					<Button press="onPressDialogCancel" text="Cancel"></Button>
				</Toolbar>
			</footer>
		</Page>
	</Dialog>
</core:FragmentDefinition>
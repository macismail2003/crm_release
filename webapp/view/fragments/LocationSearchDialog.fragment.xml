<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:table="sap.ui.table" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:valuehelp="sap.ui.comp.valuehelpdialog" xmlns:fb="sap.ui.comp.filterbar">
	<Dialog contentHeight="80%" contentWidth="60%" draggable="true" showHeader="false">
		<Page title="Location">
			<f:SimpleForm editable="true">
				<fb:FilterBar advancedMode="true" showGoOnFB="true" search="onSearch">
					<fb:filterGroupItems>
						<fb:FilterGroupItem groupName="Location" name="Location" label="Location">
							<fb:control>
								<Input id="idFilterLocation" type="Text"/>
							</fb:control>
						</fb:FilterGroupItem>
					</fb:filterGroupItems>
				</fb:FilterBar>
			</f:SimpleForm>
			<Panel expanded="true">
				<table:Table id="idLocationTable" rows="{booking>/Location}" selectionMode="Single"
					 rowSelectionChange="onPressConfirmSelectLocation" visibleRowCountMode="Fixed" visibleRowCount="10">
					<table:columns>
						<table:Column>
							<Label text="Location"/>
							<table:template>
								<Text text="{booking>LocationCode}" wrapping="true"/>
							</table:template>
						</table:Column>
						<table:Column>
							<Label text="Country"/>
							<table:template>
								<Text text="{booking>Country}" wrapping="true"/>
							</table:template>
						</table:Column>
						<table:Column>
							<Label text="Region"/>
							<table:template>
								<Text text="{booking>Region}" wrapping="true"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</Panel>
			<footer>
				<Toolbar>
					<ToolbarSpacer/>
					<Button press="onPressConfirmSelectLocation" text="OK"></Button>
					<Button press="onPressDialogCancel" text="Cancel"></Button>
				</Toolbar>
			</footer>
		</Page>
	</Dialog>
</core:FragmentDefinition>
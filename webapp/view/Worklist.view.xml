				<!--</fb:FilterBar>-->
				<content>
					<f:SimpleForm id="form" editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12"
						adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2"
						singleContainerFullSize="false">
						<f:content>
							<Label text="Customer"/>
							<MultiInput id="customerId" value="{booking>/Customer}" valueHelpRequest="onValueHelpCustRequested"/>
							<!--<Input value ="{booking>/Customer}" id="customerId"/>-->
							<!--<Label   text="Customer Name"/>-->
							<Button text="Get Lease" press="onPressGetLease"/>
							<Label text="Lease"/>
							<Input value="{booking>/Lease}" id="multiInput"/>
							<!--<MultiInput id="multiInput" value="{booking>/Lease}" valueHelpRequest="onValueHelpLeaseRequested"/>-->
							<core:Title text=""/>
							<RadioButton groupName="GroupA" text="Order By Serial" id="idRBOBS"/>
							<RadioButton groupName="GroupA" text="Order By Unit Type" id="idRBOUT"/>
							<Button text="GO" type="Emphasized" press="onPressGo"/>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
			<Panel headerText="Header" visible="{booking>/tableVisibility}">
				<f:SimpleForm id="Customerform" editable="false" layout="ColumnLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12"
					labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					singleContainerFullSize="false">
					<f:content>
						<Label text="Customer"/>
						<Text text="{path : 'booking>/Customer'}"/>
						<!--<Input value ="{booking>/Customer}" id="customerId"/>-->
						<!--<Label   text="Customer Name"/>-->
						<Label text="Customer Name"/>
						<Text text="{booking>/CustomerName}"/>
						<Label text="Lease"/>
						<Text text="{booking>/Lease}"/>
						<Label text="Lease Type"/>
						<Text text="{booking>/LeaseType}"/>
						<Label text="Creation Date"/>
						<Text text="{path: 'booking>/CreationDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short' }}"/>
						<Label text="Created By"/>
						<Text text="{booking>/CreatedBy}"/>
						<Label text="Employee Responsible"/>
						<Text text="{booking>/EmployeeResponsible}"/>
					</f:content>
				</f:SimpleForm>
			</Panel>
			<Panel headerText="Items" visible="{booking>/tableVisibility}">
				<content>
					<c:CopyPasteTable id="idTable" rows="{/items}" selectionMode="None" >
						<c:columns>
							<table:Column>
								<Label text="Item No"/>
								<table:template>
									<Text text="{ItemNo}"/>
								</table:template>
							</table:Column>
							<table:Column width="auto" visible="{= !${booking>/unitTypeEditable}}">
								<Label text="Serial No"/>
								<table:template>
									<Input value="{SerialNo}" editable="{= !${booking>/unitTypeEditable}}"/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="Unit Type"/>
								<table:template>
									<Input value="{UnitType}" editable="{booking>/unitTypeEditable}"/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="Requested Quantity" wrapping="true"/>
								<table:template>
									<Input value="{RequestedQuan}" editable="{booking>/unitTypeEditable}"/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="Location"/>
								<table:template>
									<MultiInput value="{Location}" editable="{booking>/unitTypeEditable}" id="idLocation" valueHelpRequest="onValueHelpLocationRequested"/>
								</table:template>
							</table:Column>
							<table:Column visible="{booking>/unitTypeEditable}">
								<table:template>
									<core:Icon src="sap-icon://check-availability" press="onPressAvailability"/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="Depo Code"/>
								<table:template>
									<Text text="{DepoCode}"/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="Released Quantity" wrapping="true"/>
								<table:template>
									<Text text="{ReleasedQuan}"/>
								</table:template>
							</table:Column>
							<table:Column width="auto">
								<Label text="Comment"/>
								<table:template>
									<Input value="{Comments}"/>
								</table:template>
							</table:Column>
							<table:Column>
								<Label text="Last Cargo"/>
								<table:template>
									<Input value="{LastCargo}"/>
								</table:template>
							</table:Column>
						</c:columns>
					</c:CopyPasteTable>
				</content>
			</Panel>
		</content>
			<footer >
			<OverflowToolbar visible="{booking>/tableVisibility}">
				<Button id="messagePopoverBtn" icon="sap-icon://message-popup" type="Emphasized" text="{=${message>/}.length}"
				visible="{=!!${message>/}.length}" press="handleMessagePopoverPress"/>
				<ToolbarSpacer/>
				<Button text="Validate" press="onValidate" type="Emphasized"/>
				<!--<Button text="Validate" press="onValidate"/>-->
				<Button text="Save" press="onSave"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>